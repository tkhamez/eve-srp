{% extends "layout.twig" %}
{% set active_page = "request" %}

{% block content %}

    <div class="row mb-3">
        <div class="col">
            <h1>Request</h1>
        </div>
    </div>

    {{ flashMessages()|raw }}

    {% if request %}
        <div class="page-request row mb-3">
            <div class="col-12 col-lg-7">
                <div class="card bg-dark text-light mb-3 border-light">
                    <div class="card-body">
                        {% include 'pages/request--data.twig' with { 'request': request } only %}
                    </div>
                </div>
                <div class="card bg-dark text-light border-light mt-3 " style="width:60%; margin-left:auto;">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Current payout (this month)</h5>

                        {% if currentPayouts is defined and currentPayouts %}
                            <div class="table-responsive">
                                <table class="table table-sm table-dark table-striped mb-0">
                                    <thead>
                                    <tr>
                                        <th>Division</th>
                                        <th class="text-end">Payout</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for row in currentPayouts %}
                                        <tr>
                                            <td>{{ row.name }}</td>
                                            <td class="text-end">{{ row.payout | number_format(0, '.', ',') }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <div class="text-muted">No payouts this month.</div>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-5">
                <div class="card bg-dark text-light border-light">
                    <div class="card-body">
                        {% include 'pages/request--ship.twig' with {
                            'shipName': request.ship,
                            'shipTypeId': shipTypeId,
                            'items': items,
                            'killError': killError,
                        } only %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}
