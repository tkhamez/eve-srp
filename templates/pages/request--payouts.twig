<h5 class="card-title mb-3">Current payout this month (this division only)</h5>

{% if currentPayouts is defined and currentPayouts %}
    <div class="table-responsive">
        <table class="table table-sm table-dark table-striped mb-0">
            <thead>
            <tr>
                <th>Division</th>
                <th class="text-end">Payout</th>
            </tr>
            </thead>
            <tbody>
            {% for row in currentPayouts %}
                <tr>
                    <td>{{ row.name }}</td>
                    <td class="text-end">{{ formatMillions(row.payout) }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <div>No payouts this month.</div>
{% endif %}
