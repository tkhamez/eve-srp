{% extends "_layout.twig" %}
{% set active_page = "admin-divisions" %}

{% block content %}
    <div class="row">
        <div class="col">
            <h1>Admin</h1>
            <h2>Divisions</h2>
        </div>
    </div>
    <div class="row">
        <div class="col">

            <div class="confirm-delete-division ui mini inverted modal">
                <div class="header">Delete Division</div>
                <div class="content">
                    <p>Are you sure?</p>
                </div>
                <div class="actions">
                    <form action="/admin/divisions/delete" method="post">
                        <input type="hidden" name="id" value="">
                        <div class="ui negative button">No</div>
                        <button type="submit" class="ui positive right labeled icon button">
                            Yes <i class="checkmark icon"></i>
                        </button>
                    </form>
                </div>
            </div>

            <table class="table table-sm table-dark table-striped table-bordered">
                <thead class="bg-dark-2">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for division in divisions %}
                        <tr>
                            <td>{{ division.id }}</td>
                            <td>{{ division.name }}</td>
                            <td class="text-right">
                                <button type="button" class="delete-division" data-id="{{ division.id }}">
                                    delete
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col">
            <form class="mb-3 bg-dark text-light p-3" action="/admin/divisions/new" method="post">
                <h3>Add Division</h3>
                <div class="form-group">
                    <label class="text-light" for="nameInput">Name</label>
                    <input type="text" name="name" class="form-control bg-light-1" id="nameInput">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
{% endblock %}
